@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Vroom.Dto.UpdateVehicleModelDto

<h1>Edit Vehicle Model</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <label asp-for="Abbreviation" class="control-label"></label>
        <input asp-for="Abbreviation" class="form-control" />
        <span asp-validation-for="Abbreviation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MakeId" class="control-label">Vehicle Make</label>
        <select asp-for="MakeId" class="form-control" 
                asp-items="@(new SelectList(ViewBag.VehicleMakes, "Id", "Name"))">
            <option value="">-- Select Vehicle --</option>
        </select>
        <span asp-validation-for="MakeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}