@model PaginationViewModel

<nav aria-label="Page navigation">
    <ul class="pagination">
        @{
        var prevDisabled = !Model.HasNextPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }
        <li class="page-item @prevDisabled">
            <a class="page-link"
               asp-route-pageNumber="@(Model.CurrentPage - 1)"
               asp-route-searchQuery="@Context.Request.Query["searchQuery"]"
               asp-route-sortBy="@Context.Request.Query["sortBy"]"
               asp-route-descending="@Context.Request.Query["descending"]"
               tabindex="-1">Previous</a>
        </li>
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
            <a class="page-link"
               asp-route-pageNumber="@i"
               asp-route-searchQuery="@Context.Request.Query["searchQuery"]"
               asp-route-sortBy="@Context.Request.Query["sortBy"]"
               asp-route-descending="@Context.Request.Query["descending"]">@i</a>
        </li>
        }
        <li class="page-item @nextDisabled">
            <a class="page-link"
               asp-route-pageNumber="@(Model.CurrentPage + 1)"
               asp-route-searchQuery="@Context.Request.Query["searchQuery"]"
               asp-route-sortBy="@Context.Request.Query["sortBy"]"
               asp-route-descending="@Context.Request.Query["descending"]">Next</a>
        </li>
    </ul>
</nav>